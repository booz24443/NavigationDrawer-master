<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.NewStudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:background="#91e29a"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/edt_first_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint=" نام"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/edt_last_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint=" نام خانوادگی"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#91e29a"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مقطع"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/spinner_lvl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#91e29a"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رشته"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/spinner_major"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#91e29a"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تولد"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <Spinner
            android:id="@+id/spinner_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            />

        <Spinner
            android:id="@+id/spinner_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            />

        <Spinner
            android:id="@+id/spinner_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="4"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/edt_supporter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#91e29a"
        android:drawableLeft="@drawable/ic_support"
        android:drawableStart="@drawable/ic_support"
        android:hint=" پشتیبان"
        android:padding="10dp"
        android:textColorHint="@android:color/white"
        android:textSize="20sp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="#91e29a"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/edt_phone1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_phone_24dp"
                android:drawableStart="@drawable/ic_phone_24dp"
                android:hint=" شماره"
                android:textColorHint="@android:color/white"
                android:textSize="20sp"
                />

            <ImageButton
                android:id="@+id/img_btn_more"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/ic_add"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

        </LinearLayout>



        <EditText
            android:id="@+id/edt_phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="#91e29a"
            android:drawableLeft="@drawable/ic_phone_24dp"
            android:drawableStart="@drawable/ic_phone_24dp"
            android:hint=" شماره"
            android:padding="10dp"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/edt_parent_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#91e29a"
            android:drawableLeft="@drawable/ic_phone_24dp"
            android:drawableStart="@drawable/ic_phone_24dp"
            android:hint=" شماره والدین"
            android:padding="10dp"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            />







    </LinearLayout>

</ScrollView>